@page "/listadoTerceros"
@inject ListarTercerosUseCase ListarTercerosUseCase

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>APELLIDO</th>
            <th>NOMBRE</th>
            <th>DNI</th>
            <th>TELEFONO</th>
            <th>ASEGURADORA</th>
            <th>ID SINIESTRO</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var t in _lista)
        {
            <tr>
                <td>@t.Id</td>
                <td>@t.Apellido</td>
                <td>@t.Nombre</td>
                <td>@t.Dni</td>
                <td>@t.Telefono</td>
                <td>@t.Aseguradora</td>
                <td>@t.IdSiniestro</td>
            </tr>
        }
    </tbody>
</table>
<DialogoConfirmacion @ref=dialogo Mensaje="Hubo un error al listar los terceros"  />
@code
{
    List<Tercero> _lista = new List<Tercero>();
    DialogoConfirmacion dialogo = null!;
    protected override void OnInitialized()
    {

    try{
        _lista = ListarTercerosUseCase.Ejecutar();
    }catch{
        dialogo.Mostrar();
    }
    }
    
}